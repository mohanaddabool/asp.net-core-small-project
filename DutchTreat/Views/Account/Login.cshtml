@model LoginViewModel

@{
    ViewBag.title = "Login";
}
@section scripts
{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly"></div>
                <label asp-for="UserName">User name:</label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input asp-for="RemberMe" type="checkbox" class="form-control"/>
                <label asp-for="RemberMe">Remember Me?</label>
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
